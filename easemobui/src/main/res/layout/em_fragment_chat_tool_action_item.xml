<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhou.easemobui.chat.view.EM_IconView
        android:id="@+id/em_fragment_chat_tool_action_item_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/em_common_icon_size" />

    <TextView
        android:id="@+id/em_fragment_chat_tool_action_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/em_chat_tool_padding"
        android:text="@string/em_common_title" />
</LinearLayout>