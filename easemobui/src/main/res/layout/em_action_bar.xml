<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/em_common_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/em_action_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/em_common_left_right_margin"
        android:gravity="center"
        android:padding="@dimen/em_common_padding"
        android:textColor="@color/em_icon_color"
        android:text="@string/em_common_back" />

    <LinearLayout
        android:id="@+id/em_action_bar_left_icons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/em_common_left_right_margin"
        android:layout_marginRight="@dimen/em_common_left_right_margin"
        android:layout_toLeftOf="@+id/em_action_bar_title"
        android:layout_toRightOf="@+id/em_action_bar_back"
        android:gravity="center_vertical|left"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/em_action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/em_common_padding"
        android:textColor="@color/em_icon_color"
        android:text="@string/em_common_title" />

    <LinearLayout
        android:id="@+id/em_action_bar_right_icons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/em_common_left_right_margin"
        android:layout_marginRight="@dimen/em_common_left_right_margin"
        android:layout_toRightOf="@+id/em_action_bar_title"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" />
</RelativeLayout>