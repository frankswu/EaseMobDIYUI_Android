<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/em_common_background">

    <android.support.v4.view.ViewPager
        android:id="@+id/em_fragment_chat_tool_action_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/em_fragment_chat_tool_action_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_chat_tool_indicator"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/em_chat_tool_padding" />
</LinearLayout>